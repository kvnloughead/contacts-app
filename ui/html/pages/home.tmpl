{{ define "title" }}Home{{ end }}

{{ define "main" }}
  <h2>Your Contacts</h2>
  {{ if .Contacts }}
    <table>
      <tr>
        <th>First</th>
        <th>Last</th>
        <th>Phone</th>
        <th>Email</th>
        <th>ID</th>
      </tr>
      {{ range .Contacts }}
        <tr>
          <td>{{ .First }}</td>
          <td>{{ .Last }}</td>
          <td>{{ .Phone }}</td>
          <td>{{ .Email }}</td>
          <td>
            <a href="/contacts/{{ .ID }}/edit">Edit</a>
            <a href="/contacts/view/{{ .ID }}">View</a>
          </td>
        </tr>
      {{ end }}
    </table>
  {{ else }}
    <p>There's nothing to see here... yet!</p>
  {{ end }}
{{ end }}
